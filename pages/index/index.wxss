.container {
  padding: 20rpx;
}

/* 轮播图样式 */
.carousel-container {
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.carousel-image {
  width: 100%;
  height: 300rpx;
}

/* 分类容器样式 */
.category-container {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: var(--text-color);
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.category-icon {
  width: 100rpx;
  height: 100rpx;
  background-color: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.category-name {
  font-size: 24rpx;
  color: var(--light-text);
}

/* 店铺选择器样式 */
.shop-selector {
  margin-bottom: 24rpx;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  color: var(--light-text);
}

/* 推荐店铺样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.more-link {
  font-size: 26rpx;
  color: var(--secondary-color);
}

.shop-scroll {
  white-space: nowrap;
  padding-bottom: 10rpx;
}

.shop-card {
  display: inline-block;
  width: 280rpx;
  margin-right: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(145, 213, 255, 0.08);
}

.shop-image {
  width: 100%;
  height: 180rpx;
}

.shop-info {
  padding: 16rpx;
}

.shop-name {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.shop-rating {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.star-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}

.rating-text {
  color: #ff7d00;
  margin-right: 8rpx;
}

.sales-text {
  color: var(--light-text);
}