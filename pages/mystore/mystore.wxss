.container {
  padding: 20rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 24rpx;
  text-align: center;
}

/* 状态卡片 */
.status-card {
  text-align: center;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.status-text {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
  display: block;
}

.benefit-text {
  font-size: 28rpx;
  color: #ff7d00;
}

/* 套餐选择 */
.package-container {
  margin-bottom: 24rpx;
}

.package-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.package-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
}

.package-name {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.package-price {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff4d4f;
  margin-bottom: 16rpx;
}

.package-desc {
  font-size: 24rpx;
  color: var(--light-text);
  text-align: center;
  margin-bottom: 24rpx;
}

.select-btn {
  width: 100%;
}

/* 表单容器 */
.form-container {
  margin-bottom: 24rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  margin-bottom: 12rpx;
  color: var(--text-color);
}

.form-input {
  width: 100%;
  height: 72rpx;
  border: 1rpx solid var(--border-color);
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

/* 头像上传 */
.avatar-upload, .qr-upload {
  display: flex;
  align-items: center;
}

.avatar-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 1rpx solid var(--border-color);
}

.qr-img {
  width: 160rpx;
  height: 160rpx;
  margin-right: 24rpx;
  border: 1rpx solid var(--border-color);
}

.upload-btn {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: var(--primary-color);
  color: var(--secondary-color);
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 0;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  margin-bottom: 24rpx;
}

/* 商品管理入口 */
.manage-entry {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.entry-title {
  font-size: 30rpx;
  font-weight: 500;
}

.arrow-icon {
  width: 36rpx;
  height: 36rpx;
  color: var(--light-text);
}

/* TODO标记 */
.todo-mark {
  text-align: center;
  padding: 20rpx;
  background-color: #fff7e6;
  border-radius: 8rpx;
  margin-top: 40rpx;
}

.todo-mark text {
  font-size: 26rpx;
  color: #faad14;
}