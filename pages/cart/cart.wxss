.container {
  padding-bottom: 120rpx;
}

/* 空购物车样式 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: var(--light-text);
  margin-bottom: 40rpx;
}

.goto-shop {
  width: 280rpx;
}

/* 购物车列表 */
.cart-list {
  height: calc(100vh - 120rpx);
}

/* 店铺分组 */
.shop-group {
  margin-bottom: 20rpx;
}

.shop-header {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background-color: #ffffff;
}

.shop-checkbox {
  transform: scale(1.2);
  margin-right: 16rpx;
  color: var(--secondary-color);
}

.shop-name {
  font-size: 28rpx;
  font-weight: 500;
  flex: 1;
}

/* 商品列表 */
.goods-list {
  background-color: #ffffff;
}

.goods-item {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.goods-checkbox {
  transform: scale(1.2);
  margin-right: 16rpx;
  color: var(--secondary-color);
}

.goods-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.goods-info {
  flex: 1;
}

.goods-name {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 8rpx;
}

.goods-price {
  font-size: 28rpx;
  font-weight: 600;
  color: #ff4d4f;
}

/* 数量控制 */
.quantity-control {
  display: flex;
  align-items: center;
  margin: 0 20rpx;
}

.minus-btn, .plus-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-radius: 50%;
  font-size: 32rpx;
  padding: 0;
  line-height: 56rpx;
}

.minus-btn:disabled {
  opacity: 0.5;
}

.quantity {
  width: 60rpx;
  text-align: center;
  font-size: 28rpx;
  margin: 0 12rpx;
}

/* 删除按钮 */
.delete-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.delete-icon {
  width: 32rpx;
  height: 32rpx;
  color: var(--light-text);
}

/* 底部结算栏 */
.checkout-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.all-checkbox {
  transform: scale(1.2);
  margin-right: 10rpx;
  color: var(--secondary-color);
}

.all-text {
  font-size: 28rpx;
  margin-right: 20rpx;
}

.price-info {
  flex: 1;
  text-align: right;
  margin-right: 20rpx;
}

.total-text {
  font-size: 28rpx;
  color: var(--light-text);
}

.total-price {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff4d4f;
}

.tips-text {
  font-size: 24rpx;
  color: var(--light-text);
}

.checkout-btn {
  width: 200rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  font-size: 32rpx;
}

.btn-disabled {
  background-color: #e5e5e5;
  color: white;
}