.container {
  padding: 20rpx 0;
}

/* 店铺选择器样式 */
.shop-selector {
  margin: 0 20rpx 24rpx;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  color: var(--light-text);
}

/* 商家公告样式 */
.announcement {
  margin: 0 20rpx 24rpx;
  position: relative;
}

.announcement-content {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.notice-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  color: var(--secondary-color);
}

.announcement-text {
  font-size: 26rpx;
  color: var(--light-text);
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.red-dot {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 12rpx;
  height: 12rpx;
  background-color: #ff4d4f;
  border-radius: 50%;
}

/* 商品区域样式 */
.goods-container {
  display: flex;
  height: calc(100vh - 440rpx);
}

/* 左侧分类导航 */
.category-sidebar {
  width: 180rpx;
  background-color: #f5f7fa;
  height: 100%;
}

.category-item {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: var(--light-text);
  position: relative;
}

.category-item.active {
  background-color: #ffffff;
  color: var(--secondary-color);
  font-weight: 500;
}

.category-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 40rpx;
  background-color: var(--secondary-color);
  border-radius: 0 4rpx 4rpx 0;
}

/* 右侧商品列表 */
.goods-list {
  flex: 1;
  padding: 0 20rpx;
  height: 100%;
}

.category-title {
  font-size: 32rpx;
  font-weight: 600;
  margin: 20rpx 0;
  color: var(--text-color);
}

.goods-item {
  display: flex;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.goods-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.goods-name {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  color: var(--text-color);
}

.goods-desc {
  font-size: 24rpx;
  color: var(--light-text);
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.goods-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.goods-price {
  font-size: 30rpx;
  font-weight: 600;
  color: #ff4d4f;
}

.sales-volume {
  font-size: 22rpx;
  color: var(--light-text);
  margin-right: 20rpx;
}

.add-to-cart {
  width: 56rpx;
  height: 56rpx;
  background-color: var(--secondary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cart-icon {
  width: 32rpx;
  height: 32rpx;
  color: white;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.merchant-info, .contact-service, .cart-entrance {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.merchant-icon, .service-icon, .cart-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 8rpx;
  color: var(--light-text);
}

.bottom-bar text {
  font-size: 24rpx;
  color: var(--light-text);
}

.cart-entrance {
  position: relative;
}

.cart-count {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 36rpx;
  height: 36rpx;
  background-color: #ff4d4f;
  color: white;
  font-size: 22rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}